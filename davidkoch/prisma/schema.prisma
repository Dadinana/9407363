generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Expense {
  id          String   @id @default(uuid())
  amount      Float
  description String
  date        DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model User {
  id       String     @id @default(uuid())
  name     String
  phone    String
  email    String     @unique
  expenses Expense[]
}
